<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.Product" table="product" schema="mydb">
        <id name="idProduct" column="idProduct"/>
        <property name="stock" column="stock"/>
        <property name="name" column="name"/>
        <property name="description" column="description"/>
        <property name="unitPrice" column="unit_price"/>
        <property name="listed" column="listed"/>
        <property name="idCategory" column="idCategory"/>
        <property name="sexe" column="sexe"/>
    </class>
</hibernate-mapping>